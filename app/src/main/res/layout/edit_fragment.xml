<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.example.line.ui.main.MainViewModel" />
    </data>
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back"
        android:onClick="@{()->vm.backBtnClick()}"/>

    <EditText
        android:id="@+id/edit_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="메모 제목"
        android:text="@={vm.memoTitle}"/>

    <EditText
        android:id="@+id/edit_des_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="메모 내용"
        android:text="@={vm.memoDes}"/>

    <Button
        android:id="@+id/edit_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가"
        android:onClick="@{()->vm.submitBtnClick()}"/>

    <Button
        android:id="@+id/edit_add_img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 추가" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</layout>